<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esri.arcgisruntime.arvrdemos.arvrinthearcgisruntimesdkforandroid.MainActivity">

    <FrameLayout
        android:id="@+id/lyt_surface_views"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1">

        <include layout="@layout/surface_views" />
    </FrameLayout>

    <Switch
        android:id="@+id/orangeSwitch"
        app:layout_constraintBottom_toTopOf="@id/redSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/OrangeTheme"
        />


    <Switch
        android:id="@+id/redSwitch"
        app:layout_constraintBottom_toTopOf="@id/greenSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/RedTheme"
        />


    <Switch
        android:id="@+id/greenSwitch"
        app:layout_constraintBottom_toTopOf="@id/purpleSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/GreenTheme"
        />

    <Switch
        android:id="@+id/purpleSwitch"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/PurpleTheme"
        />



</android.support.constraint.ConstraintLayout>

